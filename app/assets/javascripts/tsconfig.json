{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node"],
    "declaration": true,
    "declarationDir": "@types",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "%/*": ["../templates/*"],
      "@/*": ["./*"],
      "@Controllers/*": ["./controllers/*"]
    }
  }
}
