{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "@types",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/snjs/dist/@types/index.d.ts"
    ],
    "paths": {
      "%/*": ["../templates/*"],
      "@/*": ["./*"],
      "@Controllers/*": ["./controllers/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist", "./@types"]
}
